{
  "name": "quest-react-chrome-extension-kit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "supervisor server.js",
    "build": "tsc && vite build",
    "build-extension": "npm run copy-manifest && npm run copy-background",
    "copy-manifest": "cp src/manifest.json dist/",
    "copy-background": "cp src/background.js dist/",
    "preview": "vite preview",
    "dev-extension": "chokidar 'src/**/*' --ignore 'src/background.js' -c 'npm run build-extension'"
  },
  "dependencies": {
    "@types/node": "^20.11.25",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.263",
    "@types/react": "^18.2.56",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
